{% extends "Admin/index.twig" %}

{% block content %}
<!-- DataTables Example -->
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-map-marker"></i>
              Add Location
               <span id="flashMsg" class="alert alert-{{flashClass}}">{{ flash[flashClass][0] }}</span>
            </div>
            <div class="card-body">
            <form class="form-role-add" method="POST" action="{{ path_for("locationAddAction") }}">
                        <div class="form-group">
                                <label for="location_name" class="control-label">Location Name</label>
                                <input type="text" class="form-control" id="location_name" name="location_name" placeholder="Hagerstown, Climacteris melanura" required>
                        </div>	

                        <div class="form-group"> 
                                <label for="address" class="control-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Street address, P.O. box, company name, c/o" required>
                        </div>					

                        <div class="form-group"> 
                                <label for="city" class="control-label">City</label>
                                <input type="text" class="form-control" id="city" name="city" placeholder="Smallville, etc." required>
                        </div>	

                        <div class="form-group"> 
                                <label for="state" class="control-label">State</label>
                                <input type="text" class="form-control" id="state" name="state" placeholder="CA" required>
                        </div>
                        <div class="form-group"> 
                                <label for="latitude" class="control-label">Latitude</label>
                                <input type="text" class="form-control" id="latitude" name="latitude" placeholder="43.2222" required>
                        </div>
                        <div class="form-group"> 
                                <label for="longitude" class="control-label">Longitude</label>
                                <input type="text" class="form-control" id="longitude" name="longitude" placeholder="52.11" required>
                        </div>
                        <div class="form-group"> 
                                <label for="phone" class="control-label">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" placeholder="34-343-4244" required>
                        </div>
                        <div class="form-group"> 
                                <label for="country" class="control-label">Country</label>
                                <input type="text" class="form-control" id="country" name="country" placeholder="USA" required>
                        </div>
                        <div class="form-group"> 
                                <label for="postal_code" class="control-label">Postal Code</label>
                                <input type="text" class="form-control" id="postal_code" name="postal_code" placeholder="12121"required>
                        </div>

                        <div class="form-group"> 
                                <button type="submit" class="btn btn-primary">Save</button>
                        </div>     

                </form>	
              
                </div>
          </div>

{% endblock content %}